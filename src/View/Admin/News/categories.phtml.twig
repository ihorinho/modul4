{% extends 'admin_layout.phtml.twig' %}

{% block title %}Категорії{% endblock title %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-hover table-categories" border="1px">
            <tr>
                <th>ID</th>
                <th class="title">Назва</th>
                <th>Аліас</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td>{{ category['id'] }}</td>
                    <td>{{ category['name'] }}</td>
                    <td>{{ category['alias'] }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock body %}