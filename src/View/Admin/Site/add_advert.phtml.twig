{% extends 'admin_layout.phtml.twig' %}

{% block title %}Новий блок реклами{% endblock title %}

{% block body %}
    <h3>Введіть дані для нової реклами</h3>
    <div class="container">
        <form id="add-advert-form" action="/admin/advert/add" method="post">
            <div class="form-group">
                <label for="service">Назва послуги </label>
                <input type="text" id="service" class="form-control" name="service"  value="">
            </div>
            <div class="form-group">
                <label for="price">Вартість</label>
                <input type="number" id="price" class="form-control" name="price"  value="">
            </div>
            <div class="form-group">
                <label for="company">Фірма</label>
                <input type="text" id="company" class="form-control" name="company"  value="">
            </div>
            <div class="form-group">
                <label for="sale_product">Скидка на:</label>
                <input type="text" id="sale_product" class="form-control" name="sale_product"  value="">
            </div>
            <div class="form-group">
                <label for="priority">Приоритет</label>
                <input type="number" id="priority" class="form-control" name="priority"  value="">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="active" name="active" value="1">Активний
                </label>
            </div>
            <label for="side">Блок новин</label>
            <div class="select">
                <select name="side" id="side" style="width:100px">
                    <option value="left">Зліва</option>
                    <option value="right">Справа</option>
                </select>
            </div>
            <br/>
            <button type="submit" class="btn btn-default">Зберегти</button>
        </form>
    </div>
{% endblock body %}