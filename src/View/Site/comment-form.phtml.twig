<div class="comments comment-message-container">
    <h4>Залиште свій коментар до цієї статті:</h4>
    <hr>
    <form id="comment-message" action="" method="post" style="margin-left: 100px;">
        <div class="form-group">
            <label for="message"><h5>Коментар:</h5></label>
            <textarea id="message" class="form-control" name="message"
                      placeholder="Пишіть свій коментар сюди..." rows = '4'>{{ form.getMessage() }}</textarea>
        </div>
        <input type="hidden" name="new_id" value="{{ new['id'] }}">
        {% set visible = new['alias'] == 'politic' ? 0 : 1 %}
        <input type="hidden" name="visible" value="{{ visible }}">
        <input type="hidden" name="rating" value="0">
        <input type="hidden" name="parent_id" value="0">
        <input type="hidden" name="user" value="{{ session.get('user') }}">
        <button type="submit" class="btn btn-default">Надіслати</button>
    </form>
    <hr>
</div>

